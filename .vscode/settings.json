{
  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/*.code-search": false,
    "**/bower_components": false,
    "**/node_modules": false
  },
  "files.exclude": {
    "**/.DS_Store": false,
    "**/.git": false,
    "**/.hg": false,
    "**/.svn": false,
    "**/CVS": false,
    "**/Thumbs.db": false
  },
  "search.useGlobalIgnoreFiles": false,
  "typescript.preferences.importModuleSpecifier": "relative",
  "search.useParentIgnoreFiles": true,
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 4
  }
}